  },
  "host": "cse341-final-56l4.onrender.com",
  "basePath": "/",
  "schemes": ["https"],

  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Enter JWT token like: Bearer <token>"
    }
  },

  "paths": {
    "/": {
      "get": {
        "description": "Welcome endpoint for the API",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },

    "/books/": {
      "get": {
        "tags": ["Books"],
        "description": "Retrieve all books",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },

      "post": {
        "tags": ["Books"],
        "description": "Create a new book",
        "security": [{ "JWT": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "Harry Potter and the Philosopher's Stone" },
                "author": { "example": "J.K. Rowling" },
                "pages": { "example": 223 },
                "genre": { "example": "Fantasy" },
                "printType": { "example": "Paperback" },
                "publisher": { "example": "Bloomsbury" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/books/{bookId}": {
      "get": {
        "tags": ["Books"],
        "description": "Retrieve a specific book by ID",
        "parameters": [
          { "name": "bookId", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },

      "put": {
        "tags": ["Books"],
        "description": "Update a specific book by ID",
        "security": [{ "JWT": [] }],
        "parameters": [
          { "name": "bookId", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "Harry Potter and the Chamber of Secrets" },
                "author": { "example": "J.K. Rowling" },
                "pages": { "example": 341 },
                "genre": { "example": "Fantasy" },
                "printType": { "example": "Hardcover" },
                "publisher": { "example": "Bloomsbury" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },

